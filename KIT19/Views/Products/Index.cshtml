@model List<KIT19.Models.Domain.Product>

@{
}

<h1>Product List</h1>
<table class="table">
    <thead>
        <tr>
            <th>ProductId</th>
            <th>ProductName</th>
            <th>Size</th>
            <th>Price</th>
            <th>Mfg Date</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.ProductName</td>
                <td>@product.ProductSize</td>
                <td>@product.Price</td>
                <td>@product.MfgDate.ToString("dd-MM-yyyy")</td>
                <td>@product.Category</td>
            </tr>
        }
    </tbody>
</table>