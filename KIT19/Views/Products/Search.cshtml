@model KIT19.Models.SearchProductViewModel

<h2>Product Search</h2>

<form asp-action="Search" method="post">
    <div class="form-group">
        <label asp-for="ProductName">Product Name:</label>
        <input asp-for="ProductName" class="form-control" />
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Size Of Product</label>
        <select class="form-select" asp-for="ProductSize">
            <option value="">None</option>
            <option value="S">S</option>
            <option value="M">M</option>
            <option value="L">L</option>
        </select>
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Category of Product</label>
        <select class="form-select" asp-for="Category">
            <option value="">None</option>
            <option value="Premium">Premium</option>
            <option value="Standard">Standard</option>
            <option value="Economy">Economy</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Price">Price:</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="MfgDate">Manufacturing Date:</label>
        <input asp-for="MfgDate" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Search</button>
    <button type="reset" class="btn btn-secondary">Reset</button>
</form>

@if (Model.Products != null && Model.Products.Any())
{
    <h3>Search Results</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Product Size</th>
                <th>Category</th>
                <th>Price</th>
                <th>Manufacturing Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.ProductSize</td>
                    <td>@product.Category</td>
                    <td>@product.Price</td>
                    <td>@product.MfgDate.ToString("dd-MM-yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>No Search Results</h3>
}
